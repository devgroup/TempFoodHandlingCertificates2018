    <!-- Start column for certificates -->
            <div class="col-sm-4 rightMargin">
                <h4>Certificates</h4>

                <div class="form-group">
                    @Html.LabelFor(model => model.CanIssueCertificate, htmlAttributes: new { @class = "control-label col-sm-6" })
                    <div class="col-sm-6">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.CanIssueCertificate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CanIssueCertificate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CertificateIssuedDate, htmlAttributes: new { @class = "control-label col-sm-6" })
                    <div class="col-sm-6">
                       @{
                           string displayCertificateIssuedDate = "Not Issued"; //Default.
                           if (Model.CertificateIssuedDate.HasValue)
                           {
                               displayCertificateIssuedDate = Model.CertificateIssuedDate.Value.Date.ToString("dd-MMM-yyyy");
                           }
                       }
                       
                        @displayCertificateIssuedDate
                        
                    </div>

                    <div class="col-sm-6">
                         @Html.ActionLink("Issue Certificate", "IssueCertificate", new { id= Model.Application.AppID })
                     </div>
                     
                </div>

                <!-- Additonal section added for archiving 18-Sept 2016 -->
