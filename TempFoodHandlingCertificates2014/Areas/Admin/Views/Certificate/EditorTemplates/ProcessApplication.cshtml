        <div class="form-group">

            @Html.LabelFor(model => model.ReminderSent, htmlAttributes: new { @class = "control-label col-sm-6" })
            <div class="col-sm-6">
                <div class="checkbox">
                    @Html.DisplayFor(model => model.ReminderSent, new { htmlAttributes = new { @class = "form-control" } })
