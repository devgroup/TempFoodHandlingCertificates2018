                @Html.ValidationMessageFor(model => model.PaymentRecieved, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.AmountDue, htmlAttributes: new { @class = "control-label col-sm-6" })
